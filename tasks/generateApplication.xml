    </path>

    <path id="sk.mareksalgovic.acceleo.example.classpath">
        <path refid="sk.mareksalgovic.acceleo.example.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="sk.mareksalgovic.acceleo.example.libraryclasspath.alljars">
        <pathelement location="../sk.mareksalgovic.acceleo.example/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="sk.mareksalgovic.acceleo.example.classpath.alljars">
        <path refid="sk.mareksalgovic.acceleo.example.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generateApplication">
        <java classname="sk.mareksalgovic.acceleo.example.main.GenerateApplication" classpathref="sk.mareksalgovic.acceleo.example.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generateApplication.alljars">
        <java classname="sk.mareksalgovic.acceleo.example.main.GenerateApplication" classpathref="sk.mareksalgovic.acceleo.example.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
